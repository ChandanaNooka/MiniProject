<%= form_for User.new do |f| %>
  <div class="field form-group">
    <%= f.email_field :email,class:"form-control",placeholder:"Email", required: true, autofocus: true %>
    <br/>
  </div>
  <div class="field form-group">
    <%= f.password_field :password,class:"form-control",placeholder:"Password"%>
  </div>
  <br/>
  <div class="field form-group">
  	<%= f.label "Role  1:billing_staff  2:admin" %><br/>
    	<%= f.select :role,[1,2],class:"form-control" %>
	</div>
  <br/>
  <br/>
  <div class="actions">
    <%= f.submit "Create Account",class:"btn btn-secondary" %>
  </div>
<% end %>

